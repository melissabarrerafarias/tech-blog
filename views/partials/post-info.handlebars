 <div class="container">
            <div class="col-12">
                <div class="card mt-4">
                    <div class="card-header">
                       <p class = "post-title">"{{title}}"</p>
                       <p>by {{user.username}} on {{formatDate created_at}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{post_description}}</p>
                        <a href="/post/{{id}}">{{comments.length}} {{pluralValidation "comment" comments.length}}</a>
                    </div>
                </div>
            </div>
        </div>