<ol>
    <div class="container">
        <div class="col-12">
            <div class="card mt-4">
                <div class="card-header">
                    <p class="post-title">"{{post.title}}"</p>
                    <p>by {{post.user.username}} on {{post.created_at}}</p>
                </div>
                <div class="card-body">
                    <p class="card-text">{{post.post_description}}</p>
                    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
                </div>
            </div>
        </div>
    </div>
</ol>

<ol>
    <div class="container">
        <form class="col-12">
            <div class="form-floating">
                <textarea class="form-control comment-area" placeholder="Comments" id="floatingTextarea2"></textarea>
            </div>
            <div>
                <button type="submit" class="btn comment-btn mt-2">add comment</button>
            </div>
        </form>
    </div>
</ol>

<ol>
    {{#each post.comments}}
    <div class="container">
        <div class="card m-2">
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p class = "comments">{{comment_text}}</p>
                    <footer class="blockquote-footer"> {{user.username}} <cite class ="comments" title="Source Title">on
                            {{created_at}}</cite></footer>
                </blockquote>
            </div>
            
        </div>
    </div>
    {{/each}}
</ol>